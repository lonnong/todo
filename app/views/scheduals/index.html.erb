<p id="notice"><%= notice %></p>

<h1>
  <%= "Gene's TODO's    " + Time.now.strftime("%Y-%d-%m") %></h1>

<table class="table-bordered">
  <thead>
    <tr>
      <th> Item </th>
      <th> Completed </th>
      <th> Stars </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scheduals.each do |schedual| %>
      <tr>
        <td><%= schedual.item %></td>
        <td><%= schedual.comp %></td>
        <td><%= schedual.stars %></td>
        <td><%= link_to 'Show', schedual, :class => 'btn btn-link'%></td>
        <td><%= link_to 'Edit', edit_schedual_path(schedual), :class => 'btn btn-link' %></td>
        <td><%= link_to 'Destroy', schedual, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedual', new_schedual_path, :class => 'btn btn-success' %>
